<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">
    <SurfaceView android:id="@+id/surface_view"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_gravity="center"/>

    <RelativeLayout
        android:id="@+id/hud"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/bg_animation_item_cur"
            app:title="">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="播放"
                android:singleLine="true"
                android:maxEms="10"
                android:ellipsize="marquee"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
        </android.support.v7.widget.Toolbar>

        <pro.luxun.luxunanimation.view.view.Viedo.VideoSide_
            android:id="@+id/light"
            android:layout_width="15dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal"
            app:height_dp="120dp"/>

        <pro.luxun.luxunanimation.view.view.Viedo.VideoSide_
            android:id="@+id/sound"
            android:layout_width="15dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_normal"
            app:height_dp="120dp"/>

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:barColor="@color/colorPrimary"
            app:progressIndeterminate="true"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_animation_item_cur"
            android:paddingBottom="@dimen/margin_narrow">

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/play_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:button="@null"
                android:background="@drawable/play_btn_selector"
                android:layout_below="@id/seek_bar"
                android:layout_marginLeft="@dimen/margin_narrow"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_toRightOf="@id/play_btn"
                android:layout_below="@id/seek_bar"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_normal"
                android:text="00:00/00:00"
                android:textSize="@dimen/text_szie_normal"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
    </RelativeLayout>
</merge>