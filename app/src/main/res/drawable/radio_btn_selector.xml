<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>

            <item android:width="16dp" android:height="16dp" android:gravity="right">
                <shape android:shape="oval">
                    <solid android:color="@color/bg_animation_item_cur"/>
                </shape>
            </item>

            <item android:width="16dp" android:height="16dp" android:gravity="right">
                <shape android:shape="ring"
                       android:innerRadius="6dp"
                       android:useLevel="false"
                       android:thickness="1dp" >
                    <solid android:color="@android:color/white"/>
                </shape>
            </item>

            <item  android:width="10dp" android:height="10dp" android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp" android:gravity="right">
                <shape android:shape="oval">
                    <solid android:color="@android:color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item android:width="16dp" android:height="16dp" android:gravity="right">
                <shape android:shape="oval">
                    <solid android:color="@color/bg_animation_item_cur"/>
                </shape>
            </item>

            <item android:width="16dp" android:height="16dp" android:gravity="right">
                <shape android:shape="ring"
                       android:innerRadius="6dp"
                       android:useLevel="false"
                       android:thickness="1dp" >
                    <solid android:color="@android:color/white"/>
                </shape>
            </item>

        </layer-list>
    </item>
</selector>